<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="compute_fund_setting_tree" model="ir.ui.view">
            <field name="name">compute.fund.setting</field>
            <field name="model">compute.fund.setting</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="计算模型设置">
                    <field name='code' />
                    <field name='name' />
                    <field name='time_types' />
                    <field name='transaction_date_config_id' />
                    <field name='beg_date' />
                    <field name='end_date' />
                    <field name='last_compute_indicators_datetime' />
                </tree>
            </field>
        </record>

        <record id="compute_fund_setting_form" model="ir.ui.view">
            <field name="name">compute.fund.setting</field>
            <field name="model">compute.fund.setting</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
				<form string="计算模型设置">
                    <sheet string="计算模型设置">
                        <H1>创建</H1>
                        <group>
                            <group>
                                <field name="code" required="1"/>
                                <field name="time_types" required="1"/>
                                <field name="beg_date" required="1"/>
                                <field name="year_days" required="1"/>
                            </group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="transaction_date_config_id" required="1"/>
                                <field name="end_date" required="1"/>
                                <field name="year_weeks" required="1"/>
                            </group>
                        </group>
                    </sheet>

                    <sheet string="设置无风险收益率计算-RF">
                        <H1>设置无风险收益率计算-RF</H1>
                        <group>
                            <group>
                              <field name="risk_types" required="1"/>
                                <field name="no_risk_data_id"/>
                              </group>
                              <group>
                                  <button string="计算" name="compute_rf" type="object" class="btn-primary"/>
                            </group>
                        </group>
                        <H1>无风险收益率明细</H1>
                            <notebook>
                                <page string="年">
                                    <field name="filter_no_risk_data_line_year_ids" readonly="1">
                                        <tree editable="bottom" delete="0" >
                                            <field name="name"/>
                                            <field name="interest_rate"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="月">
                                    <field name="filter_no_risk_data_line_month_ids" readonly="1">
                                        <tree editable="bottom" delete="0">
                                            <field name="name"/>
                                            <field name="interest_rate"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="周">
                                    <field name="filter_no_risk_data_line_week_ids" readonly="1">
                                        <tree editable="bottom" delete="0">
                                            <field name="name"/>
                                            <field name="interest_rate"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="日">
                                    <field name="filter_no_risk_data_line_day_ids" readonly="1">
                                        <tree editable="bottom" delete="0" default_order="dates desc">
                                            <field name="dates"/>
                                            <field name="interest_rate"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                            <notebook>
                                <page string="自定义rf">
                                    <field name="manual_rf_ids">
                                        <tree editable="bottom">
                                            <field name="interest_rate"/>
                                            <field name="beg_date"/>
                                            <field name="end_date"/>
                                            <field name="remain"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        <group>
                            <group>
                                <field name="rf_manual_year" required="1"/>
                                <field name="rf_manual_month" required="1"/>
                                <field name="rf_manual_week" required="1"/>
                                <field name="rf_manual_day" required="1"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>

                    <sheet string="设置基准综合收益率-RM">
                        <H1>设置基准综合收益率-RM</H1>
                        <notebook>
                            <page string="设置基准综合收益率-RM">
                                <field name="rm_setting_ids">
                                    <tree string="设置基准综合收益率-RM" editable="bottom">
                                        <field name="market_situation_id"/>
                                        <field name="ratio"/>
                                    </tree>
                                </field>
                                <field name="rm_rate" readonly="0"/>
                            </page>
                        </notebook>
                    </sheet>

                    <sheet string="时间区间">
                        <H1>时间区间</H1>
                        <notebook>
                            <page string="时间区间">
                                <field name="market_config_ids"/>
                            </page>
                        </notebook>
                        <button string="计算" name="filter" type="object" class="btn-primary"/>
                    </sheet>

                    <sheet string="筛选后的数据">
                        <H1>筛选后的数据</H1>
                        <notebook>
                            <page string="筛选后的数据">
                                <field name="filter_fund_base_data_ids">
                                    <tree>
                                        <field name="code"/>
                                        <field name="fund_base_data_id"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="fund_base_data_id" />
                                                    <field name="code" />
                                                    <H1>详细指标数据</H1>
                                                    <field name="total_std" />
                                                    <field name="year_std" />
                                                    <field name="market_std" />
                                                </group>
                                                <group>

                                                </group>
                                            </group>
                                            <notebook>
                                                <page string="日净值">
                                                    <field name="filter_fund_base_day_net_ids" >
                                                        <tree editable="bottom">
                                                            <field name="dates" />
                                                            <field name="beg_price" />
                                                            <field name="end_price" />
                                                            <field name="unit_net" />
                                                            <field name="total_net" />
                                                        </tree>
                                                    </field>
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>

                                </field>
                            </page>
                        </notebook>
                    </sheet>
				</form>
            </field>
        </record>

    </data>
</odoo>