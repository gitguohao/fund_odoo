<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="wizard_form" model="ir.ui.view">
            <field name="name">wizard</field>
            <field name="model">wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
				<form string="新增年度交易日">
                    <sheet string="新增年度交易日">
                        <group>
                            <group>
                                <field name="years"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="act_create_wizard" string="确认" type="object" class="btn-primary" />
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
				</form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="wizard_action">
            <field name="name">新增年度交易日</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="wizard_form"/>
        </record>
    </data>
</odoo>