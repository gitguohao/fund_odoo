<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="transaction_date_config_tree" model="ir.ui.view">
            <field name="name">transaction.date.config</field>
            <field name="model">transaction.date.config</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="交易日管理">
                    <field name='name' />
                    <field name='code' />
                    <field name='remark' />
                </tree>
            </field>
        </record>
        <record id="transaction_date_config_form" model="ir.ui.view">
            <field name="name">transaction.date.config</field>
            <field name="model">transaction.date.config</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
				<form string="交易日管理">
                    <sheet string="交易日管理">
                        <group>
                            <group>
                                <field name="name"/>

                            </group>
                            <group>
                                <field name="code"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="交易日管理" >
                                <field name="transaction_date_ids">
                                    <tree editable="bottom">
                                        <field name="dates" />
                                        <field name="is_transaction_selection" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
				</form>
            </field>
        </record>

    </data>
</odoo>